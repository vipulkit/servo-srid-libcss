VPATH=%VPATH%

CC ?= gcc
CXX ?= g++
CXXFLAGS ?=
AR ?= ar
RUSTC ?= rustc

RUST_SRC=$(shell find $(VPATH)/. -type f -name '*.rs')

.PHONY: all
all:	
	cd $(VPATH)/libwapcaplet; make; cd -
	cd $(VPATH)/libparserutils; make; cd -
	cd $(VPATH)/libcss; make; cd -
	cp $(VPATH)/libwapcaplet/*.so .
	cp $(VPATH)/libparserutils/*.so .
	cp $(VPATH)/libcss/*.so .
	

.PHONY: clean
clean:
	cd $(VPATH)/libwapcaplet; make clean; cd -
	cd $(VPATH)/libparserutils; make clean; cd -
	cd $(VPATH)/libcss; make clean; cd -
	rm -rf *.so


