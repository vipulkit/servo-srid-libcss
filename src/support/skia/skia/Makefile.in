        SKIA_SRC += $(SKIA_OPTS_CXX_SRC_ARM)
endif

SKIA_OBJS=$(patsubst %.cpp,%.o,$(SKIA_SRC))

.PHONY: all

all:	libskia.dummy

libskia.dummy:	libskia.a
	touch $@

%.o:	%.cpp
	mkdir -p `dirname $@` && $(CXX) -c $(CXXFLAGS) -o $@ $<

libskia.a: $(SKIA_OBJS)
	$(AR) rcs $@ $(SKIA_OBJS)

.PHONY: check
check:

.PHONY: clean
clean:
	find . -name '*.o' -or -name '*.a' | xargs rm -f

