VPATH=%VPATH%

CC ?= gcc
CXX ?= g++

ifeq ($(CFG_ENABLE_DEBUG_SKIA),1)
CXXFLAGS += \
	-g \
	-DSK_DEBUG \
	-DGR_DEBUG=1 \
	-DGR_GL_LOG_CALLS=1 \
	-DGR_GL_LOG_CALLS_START=1 \
	$(NULL)
else
CXXFLAGS += \
	-O3 \
	-DSK_RELEASE \
	-DGR_RELEASE=1 \
	$(NULL)
endif

CXXFLAGS+=\
	-fPIC \
	-DSK_A32_SHIFT=24 -DSK_R32_SHIFT=16 -DSK_G32_SHIFT=8 -DSK_B32_SHIFT=0 \
	-I$(VPATH)/include/config \
	-I$(VPATH)/include/core \
	-I$(VPATH)/include/effects \
	-I$(VPATH)/include/gpu \
	-I$(VPATH)/include/lazy \
	-I$(VPATH)/include/ports \
	-I$(VPATH)/src/core \
	-I$(VPATH)/src/image \
	-I$(VPATH)/src/sfnt \
	-I$(VPATH)/include/utils \
	-iquote $(VPATH)/src/gpu \
	$(NULL)

USE_CLANG = $(shell $(CXX) --version|grep -c 'clang')

ifeq ($(USE_CLANG),1)
    CXXFLAGS += -Wno-c++11-extensions
endif

UNAME=$(shell uname)
ifneq ($(CFG_CPUTYPE), arm)
	CXXFLAGS += -mssse3
endif

ifeq ($(UNAME),Darwin)
    OSTYPE=darwin
endif
ifeq ($(UNAME),Linux)
    OSTYPE=linux
endif
ifeq ($(CFG_OSTYPE),linux-androideabi)
    OSTYPE=android
endif

