VPATH=%VPATH%

CC ?= gcc
CXX ?= g++
CXXFLAGS ?=
AR ?= ar
RUSTC ?= rustc
RUSTFLAGS ?=

RUST_SRC=$(shell find $(VPATH)/. -type f -name '*.rs')

.PHONY: all
all:	librustlayers.dummy

%.o:	%.c
	$(CC) $< -o $@ -c $(CFLAGS)

librustlayers.dummy: layers.rc $(RUST_SRC)
	$(RUSTC) $(RUSTFLAGS) $< --out-dir .
	touch $@

.PHONY: check
check:

.PHONY: clean
clean:
	rm -f *.o *.a *.so *.dylib *.dll *.dummy *-test

